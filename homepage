<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Menu</title>

  <style>
    body {
      font-family: -apple-system, BlinkMacSystemFont, sans-serif;
      margin: 0;
      background: #f5f5f5;
    }
    header {
      background: #111;
      color: #fff;
      padding: 14px;
      text-align: center;
      font-size: 20px;
    }
    .lang {
      display: flex;
      justify-content: center;
      gap: 10px;
      padding: 10px;
      background: #fff;
    }
    .lang button {
      padding: 6px 12px;
      border-radius: 6px;
      border: 1px solid #ccc;
      background: #fff;
    }
    .menu {
      padding: 16px;
    }
    .item {
      background: #fff;
      border-radius: 10px;
      padding: 12px;
      margin-bottom: 12px;
    }
    .name {
      font-weight: 600;
    }
    .desc {
      font-size: 14px;
      color: #666;
      margin: 6px 0;
    }
    .price {
      font-weight: 600;
    }
    .item button {
      margin-top: 8px;
      width: 100%;
      padding: 8px;
      background: #111;
      color: #fff;
      border: none;
      border-radius: 6px;
    }
    .cart {
      position: fixed;
      bottom: 0;
      width: 100%;
      background: #fff;
      border-top: 1px solid #ddd;
      padding: 12px;
    }
    .cart-item {
      display: flex;
      justify-content: space-between;
      font-size: 14px;
    }
    .total {
      font-weight: 700;
      margin-top: 8px;
    }
  </style>
