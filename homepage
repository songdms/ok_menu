<body>

<header id="title">MENU</header>

<div class="lang">
  <button onclick="setLang('en')">English</button>
  <button onclick="setLang('zh')">中文</button>
</div>

<section class="menu" id="menu"></section>

<div class="cart" id="cart">
  <div id="cartItems"></div>
  <div class="total" id="total"></div>
</div>

<script>
  const data = {
    en: {
      title: "MENU",
      add: "Add to Cart",
      total: "Total",
      items: [
        { id: 1, name: "Bulgogi Pasta", desc: "Cream sauce with Korean beef", price: 15000 },
        { id: 2, name: "Gambas Al Ajillo", desc: "Shrimp with garlic oil", price: 18000 }
      ]
    },
    zh: {
      title: "菜单",
      add: "加入购物车",
      total: "总价",
      items: [
        { id: 1, name: "韩式烤牛肉意面", desc: "奶油酱搭配韩式牛肉", price: 15000 },
        { id: 2, name: "蒜香虾", desc: "橄榄油蒜香风味", price: 18000 }
      ]
    }
  };

  let lang = "en";
  let cart = {};

  function setLang(l) {
    lang = l;
    renderMenu();
    renderCart();
  }

  function renderMenu() {
    document.getElementById("title").innerText = data[lang].title;
    const menu = document.getElementById("menu");
    menu.innerHTML = "";

    data[lang].items.forEach(item => {
      const div = document.createElement("div");
      div.className = "item";
      div.innerHTML = `
        <div class="name">${item.name}</div>
        <div class="desc">${item.desc}</div>
        <div class="price">₩${item.price.toLocaleString()}</div>
        <button onclick="addToCart(${item.id})">${data[lang].add}</button>
      `;
      menu.appendChild(div);
    });
  }

  function addToCart(id) {
    cart[id] = (cart[id] || 0) + 1;
    renderCart();
  }

  function renderCart() {
    const cartDiv = document.getElementById("cartItems");
    const totalDiv = document.getElementById("total");
    cartDiv.innerHTML = "";

    let total = 0;
    const items = data[lang].items;

    for (let id in cart) {
      const item = items.find(i => i.id == id);
      const qty = cart[id];
      const price = item.price * qty;
      total += price;

      const row = document.createElement("div");
      row.className = "cart-item";
      row.innerHTML = `${item.name} × ${qty} <span>₩${price.toLocaleString()}</span>`;
      cartDiv.appendChild(row);
    }

    totalDiv.innerText = `${data[lang].total}: ₩${total.toLocaleString()}`;
  }

  renderMenu();
  renderCart();
</script>

</body>
</html>
